{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "app",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "build/src/scripts",
    "resolveJsonModule": true,
    "rootDir": "app",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "pretty": true,
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "include": [
    "app/**/*"
  ]
}
