{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "app",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "build/src/scripts",
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "app",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es6",
    "types": ["chrome", "jest", "node"]
  },
  "exclude": [
    "node_modules",
    "**/*.test.{ts,tsx}",
  ],
  "include": [
    "app/**/*"
  ]
}
